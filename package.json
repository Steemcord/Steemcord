{
  "name": "steemcord",
  "productName": "Steemcord",
  "description": "Taking Steam's Rich Presence to Discord!",
  "repository": "https://github.com/Steemcord/Steemcord",
  "author": "Snazzah",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "build": {
    "afterSign": "util/notarize.js",
    "appId": "com.snazzah.steemcord",
    "productName": "Steemcord",
    "copyright": "Copyright Â© 2020 Snazzah",
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "darkModeSupport": true
    },
    "dmg": {
      "backgroundColor": "#1e272e",
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "Steemcord",
      "installerSidebar": "build/installerSidebar.bmp"
    },
    "directories": {
      "app": "dist/app"
    },
    "files": [
      "**/*",
      "!node_modules/**/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/**.d.ts",
      "!node_modules/vue-js-modal/{docs,build}/**/*",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/*.{vue,md}"
    ]
  },
  "scripts": {
    "lint": "yarn run eslint ./src",
    "lint:fix": "yarn run eslint ./src --fix",
    "build": "devScript --copyOnly && tsc && webpack",
    "build:dist": "devScript --copyOnly && tsc --skipLibCheck && webpack",
    "start": "electron dist/app/.",
    "dev": "npx npm-run-all build -p -r webpack start",
    "webpack": "webpack -w --no-stats-all --stats-warnings --stats-errors",
    "init:dev": "yarn && rimraf node_modules/electron/node_modules/@types/node",
    "init:pkg": "tsc --skipLibCheck && tsc util/prepare util/zip util/notarize",
    "ready-pkg": "rimraf dist && yarn build:dist && cd dist/app/ && yarn init:dev && cd ../../",
    "before-pkg": "yarn init:dev && yarn ready-pkg && yarn init:pkg && node util/prepare",
    "pkg": "yarn before-pkg && npx electron-builder -p onTag"
  },
  "dependencies": {
    "@discordjs/collection": "^0.1.6",
    "abort-controller": "^3.0.0",
    "auto-launch": "^5.0.5",
    "cat-loggr": "^1.1.0",
    "chokidar": "^3.4.3",
    "discord-rpc": "^3.1.4",
    "electron-log": "^4.3.0",
    "electron-store": "^6.0.1",
    "electron-updater": "^4.3.5",
    "eventemitter3": "^4.0.7",
    "fuzzy": "^0.1.3",
    "joi": "^17.3.0",
    "joi-extension-semver": "^5.0.0",
    "lodash": "^4.17.20",
    "node-fetch": "^2.6.1",
    "steam-user": "^4.18.0",
    "typescript": "^4.0.5",
    "vm2": "^3.9.2",
    "vue": "^2.6.12",
    "vue-js-modal": "^2.0.0-rc.6",
    "vue-router": "^3.4.8",
    "vue-tippy": "^4.7.2",
    "vue-virtual-scroll-list": "^2.3.1"
  },
  "devDependencies": {
    "@types/auto-launch": "^5.0.1",
    "@types/discord-rpc": "^3.0.4",
    "@types/lodash": "^4.14.164",
    "@types/node": "^14.14.6",
    "@types/node-fetch": "^2.5.7",
    "@types/steamid": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "archiver": "^5.0.2",
    "css-loader": "^5.0.0",
    "electron": "^10.1.5",
    "electron-notarize": "^1.0.0",
    "eslint": "^7.12.1",
    "eslint-plugin-vue": "^7.1.0",
    "file-loader": "^6.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "stylus": "^0.54.8",
    "stylus-loader": "^4.2.0",
    "ts-devscript": "^1.0.8",
    "ts-loader": "^8.0.7",
    "typed-emitter": "^1.3.1",
    "unzipper": "^0.10.11",
    "url-loader": "^4.1.1",
    "vue-loader": "^15.9.4",
    "vue-svg-loader": "^0.16.0",
    "vue-template-compiler": "^2.6.12",
    "webpack": "^5.3.2",
    "webpack-cli": "^4.1.0",
    "yarn": "^1.22.10"
  }
}
