{
  "name": "steemcord",
  "productName": "Steemcord",
  "description": "Taking Steam's Rich Presence to Discord!",
  "repository": "https://github.com/Steemcord/Steemcord",
  "author": "Snazzah",
  "version": "1.1.0",
  "main": "index.js",
  "license": "MIT",
  "build": {
    "appId": "com.snazzah.steemcord",
    "productName": "Steemcord",
    "copyright": "Copyright Â© 2020 Snazzah",
    "publish": {
      "provider": "github",
      "releaseType": "draft"
    },
    "win": {
      "publish": [
        "github"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "darkModeSupport": true,
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": "tar.gz",
      "category": "Utility",
      "publish": [
        "github"
      ]
    },
    "dmg": {
      "backgroundColor": "#1e272e",
      "sign": false
    },
    "nsis": {
      "uninstallDisplayName": "Steemcord",
      "installerSidebar": "build/installerSidebar.bmp"
    },
    "directories": {
      "app": "dist/app"
    },
    "files": [
      "**/*",
      "!node_modules/**/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/**.d.ts",
      "!node_modules/vue-js-modal/{docs,build}/**/*",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/*.{vue,md}"
    ]
  },
  "scripts": {
    "lint": "yarn run eslint ./src",
    "lint:fix": "yarn run eslint ./src --fix",
    "build": "devScript --copyOnly && tsc && webpack",
    "build:dist": "devScript --copyOnly && tsc --skipLibCheck && webpack",
    "start": "electron dist/app/.",
    "dev": "npx npm-run-all build -p -r webpack start",
    "webpack": "webpack -w --no-stats-all --stats-warnings --stats-errors",
    "init:dev": "yarn && rimraf node_modules/electron/node_modules/@types/node",
    "init:pkg": "tsc --skipLibCheck && tsc util/prepare util/zip util/notarize",
    "ready-pkg": "rimraf dist && yarn build:dist && cd dist/app/ && yarn init:dev && cd ../../",
    "before-pkg": "yarn init:dev && yarn ready-pkg && yarn init:pkg && node util/prepare",
    "pkg": "yarn before-pkg && npx electron-builder"
  },
  "dependencies": {
    "@discordjs/collection": "^0.1.6",
    "@electron/remote": "^2.1.2",
    "abort-controller": "^3.0.0",
    "auto-launch": "^5.0.6",
    "cat-loggr": "^1.2.2",
    "chokidar": "^3.6.0",
    "discord-rpc": "^3.2.0",
    "electron-log": "^5.1.6",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.3.0",
    "eventemitter3": "^5.0.1",
    "fuzzy": "^0.1.3",
    "joi": "^17.13.3",
    "joi-extension-semver": "^5.0.0",
    "lodash": "^4.17.21",
    "steam-user": "^5.0.10",
    "typescript": "^5.5.4",
    "vm2": "^3.9.19",
    "vue": "^2.7.16",
    "vue-js-modal": "^2.0.1",
    "vue-router": "^3.6.5",
    "vue-tippy": "^4.16.1",
    "vue-virtual-scroll-list": "^2.3.5"
  },
  "devDependencies": {
    "@types/auto-launch": "^5.0.5",
    "@types/discord-rpc": "^3.0.6",
    "@types/lodash": "^4.17.7",
    "@types/steam-user": "^5.0.0",
    "@types/steamid": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "archiver": "^7.0.1",
    "css-loader": "^7.0.2",
    "electron": "^31.2.1",
    "electron-notarize": "^1.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^7.20.0",
    "file-loader": "^6.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "style-loader": "^4.0.0",
    "stylus": "^0.63.0",
    "stylus-loader": "^8.1.0",
    "ts-devscript": "^1.1.1",
    "ts-loader": "^8.4.0",
    "typed-emitter": "^2.1.0",
    "unzipper": "^0.12.2",
    "url-loader": "^4.1.1",
    "vue-loader": "^15.11.1",
    "vue-svg-loader": "^0.16.0",
    "vue-template-compiler": "^2.7.16",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "yarn": "^1.22.22"
  }
}
