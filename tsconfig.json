{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "inlineSourceMap": true,
    "baseUrl": ".",
    "outDir": "dist/app",
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["@types"],
    "paths": {
      "*": ["node_modules/*", "@types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/view/**/*", "node_modules"]
}